/* pages/shopcart/shopcart.wxss */

.shop-logo {
  width: 32rpx;
  height: 32rpx;
  align-self: center;
  margin-left: 20rpx;
}

.mgn-b2 {
  margin-bottom: 2rpx;
}

.margin-L10{
  margin-left: 10rpx;
}

.sel-img{
  width:45rpx;
  height: 45rpx;
  align-self: center;
  margin-left: 10rpx;
}

.item {
  position: relative;
  width: 700rpx;
}

.item-body {
  width: 180rpx;
  height: 180rpx;
  border: 2rpx solid #eee;
}

.item-body image {
  max-height: 160rpx;
  max-width: 160rpx;
  padding: 10rpx;
}

.item-content {
  width: 100%;
  border-bottom: 2rpx solid #eeeeee;
}

.cont-title {
  padding-right: 20rpx;
  width: 370rpx;
  /**
  设置显示两行，超过两行 则显示省略号
  **/
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  max-lines: 2;
  min-height: 80rpx;
}


.bound-3{
  border: 1rpx solid #333333;
}

.bound-f{
  border: 1rpx solid #bfbfbf;
}

.plus-cut{
  display: flex;
  width: 56rpx;
  height: 56rpx;
  justify-content: center;
  align-items: center
}

.bg-e{
  background-color: #eeeeee;
}

.txt-center{
  text-align: center;
  align-self: center;
}

.list-body{
  padding-bottom: 120rpx;
}

.fix-bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 750rpx;
  border-top: 2rpx solid #eeeeee;
}

.settlement{
  width: 140rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
}

.txt-center{
  align-self: center;
}

/** 去掉scroll-view的滚动条 **/
::-webkit-scrollbar {
width: 0;
height: 0;
color: transparent;
}

.scroll-del{
  background-color: #fa6e57;
  color: white;
  font-size: 32rpx;
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center
}

.w900{
  width: 900rpx;
}
